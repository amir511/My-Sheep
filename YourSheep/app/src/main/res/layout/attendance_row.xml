<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sheep_void"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="15dp"
            android:id="@+id/atRowKidImage"
            android:adjustViewBounds="false"
            android:saveEnabled="false"
            android:scaleType="fitXY"
            android:cropToPadding="false"
            android:padding="2dp"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sheep_frame"
            android:id="@+id/atRowimageFrame"
            android:layout_marginTop="0dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:padding="2dp"/>


        <TextView
            android:text="@string/attendance"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/atRowKidImage"
            android:layout_toLeftOf="@id/atRowKidImage"
            android:layout_toStartOf="@id/atRowKidImage"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/atRowNameText"
            android:textColor="#000000"
            android:textSize="20sp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/atRowChecBox"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:scaleX="1.2"
            android:scaleY="1.2"


            />


</RelativeLayout>